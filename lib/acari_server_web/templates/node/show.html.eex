<h2>Параметры Узла</h2>

<ul>

  <li>
    <strong>Имя:</strong>
    <%= @node.name %>
  </li>

  <li>
    <strong>Описание:</strong>
    <%= @node.description %>
  </li>

  <li>
    <strong>Группы:</strong>
    <%= groups_list(@node) %>
  </li>

  <li>
    <strong>Класс:</strong>
    <%= script_name(@node) %>
  </li>

  <li>
    <strong>Параметры:</strong>
    <%= param_list(@node.params) %>
  </li>


</ul>

<span><%= link "Редактировать", to: Routes.node_path(@conn, :edit, @node) %></span>
|
<span><%= link "Клонировать", to: Routes.node_path(@conn, :new, node_id: @node.id) %></span>
|
<span><%= link "Назад", to: Routes.node_path(@conn, :index) %></span>
