<h1>Список Узлов</h1>

<table id="datatable" class="table display table-striped table-bordered table-sm">
  <thead>
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Описание</th>
      <th scope="col">Группы</th>
      <th scope="col">параметры</th>

      <th scope=></th>
    </tr>
  </thead>
  <tbody>
<%= for node <- @nodes do %>
    <tr>
      <td>
      <%= link node.name, to: Routes.node_path(@conn, :show, node) %>
      </td>
      <td><%= node.description %></td>
      <td><%= groups_list(node) %></td>
      <td><%= node.params %></td>

      <td>
        <%= link "Редактировать", to: Routes.node_path(@conn, :edit, node) %>
        <%= link "Удалить", to: Routes.node_path(@conn, :delete, node), method: :delete, data: [confirm: "Вы уверены?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "Новый узел", to: Routes.node_path(@conn, :new) %></span>
