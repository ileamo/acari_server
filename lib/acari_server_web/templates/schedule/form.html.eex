<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Упс, что-то пошло не так! См. сообщения под формами ввода.</p>
    </div>
  <% end %>

  <%= label f, :schedule %>
  <%= text_input f, :schedule %>
  <%= error_tag f, :schedule %>

  <div>
    <%= submit "Сохранить" %>
  </div>
<% end %>
