<% current_time = :os.system_time(:microsecond) %>
<%= for %{name: hd, timestamp: ts, opts: %{level: lv, text: body}} <- @mes_list do %>
  <% alert =
        case lv do
          1 -> "danger"
          2 -> "warning"
          3 -> "info"
          4 -> ""
          _ -> "secondary"
        end
  %>
  <li class="list-group-item list-group-item-<%= alert %> p-1">
    <p>
      <strong><%= "#{get_local_time(ts, current_time)} #{hd}" %></br></strong>
      <%= body %>
    </p>
  </li>
<% end %>
